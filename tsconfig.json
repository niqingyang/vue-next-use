{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "outDir": "lib",
    "rootDir": "src",
    "lib": [
      "es2018",
      "esnext",
      "dom"
    ],
    "types": [
      "node",
      "vite/client"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
